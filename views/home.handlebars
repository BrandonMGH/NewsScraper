{{#each articles}}
<hr />
<h3>{{this.title}}</h3>
<p>{{this.author}}</p>
<h5>{{this.snippet}}</h5>
<a href={{this.link}}>Go To Article</a>
<h5>Article comments</h5>
{{#each this.comments}}
<p>{{this.body}}</p>
<small>{{this.dateAdded}}</small>
<form action="/api/{{this._id}}/comment" method="POST">
    
    <button type="submit">Delete</button>
</form>
{{/each}}
<div class="row">
    <div class="col-lg-2">
        <form action="/api/{{this._id}}/comment" method="POST">
            <textarea name="body"></textarea>
            <button type="submit">Submit Comment</button>
        </form>
    </div>
    <hr />
</div>
{{/each}}