<form action="/scrape" method="GET">
    <div style="text-align:center;">
        <button type="submit" class="btn btn-outline-dark btn-lg">Scrape for New Articles</button>
    </div>
</form>
{{#each articles}}
<hr />
<h3>{{this.title}}</h3>
<p>{{this.author}}</p>
<h5>{{this.snippet}}</h5>
<button type="submit" class="btn btn-outline-primary articleLink"><a href={{this.link}}>Go To Article</a></button>
<h5 class="articleHeader">Article comments</h5>
{{#each this.comments}}
<p>{{this.body}}</p>
<small>{{this.dateAdded}}</small>
<button type="submit" class="btn btn-outline-dark deletebtn" onClick="window.location.reload()"
    data-id={{this._id}}>Delete Comment</button>
{{/each}}
<div class="row">
    <div class="col-lg-2">
        <form action="/api/{{this._id}}/comment" method="POST">
            <textarea name="body"></textarea>
            <button type="submit" class="btn btn-outline-dark submitBtn">Submit Comment</button>
        </form>
    </div>
    <hr />
</div>
{{/each}}